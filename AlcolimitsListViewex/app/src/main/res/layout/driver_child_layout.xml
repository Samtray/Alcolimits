<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp"
    android:background="#3a3b3c"
    >
    <RelativeLayout


        android:id="@+id/rlMain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >


        <com.android.volley.toolbox.NetworkImageView
            android:id="@+id/ivCar"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="25dp" />
<!--            android:src="@drawable/carred"-->
        <Button
            android:id="@+id/btnSend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="42dp"
            android:text="Send Test"
            android:layout_marginRight="10dp"
            android:layout_alignParentEnd="true"
            android:onClick="sendTest"
            style="@style/btn"
            />

        <RelativeLayout
            android:id="@+id/rlIcons"
            android:layout_marginTop="10dp"
            android:layout_below="@id/rlCarDetails"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            >

            <RelativeLayout
                android:id="@+id/rlPower"
                android:layout_toStartOf="@id/rlTemperature"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                >

                <com.android.volley.toolbox.NetworkImageView
                    android:id="@+id/ivPower"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="20dp" />
<!--                    android:src="@drawable/ic_power_button"-->


                <TextView
                    android:id="@+id/tvPower"
                    style="@style/label"
                    android:layout_below="@id/ivPower"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="5dp"
                    android:text="Vehicle On" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rlAlcohol"
                android:layout_width="202dp"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/rlTemperature"
                >

                <com.android.volley.toolbox.NetworkImageView
                    android:id="@+id/ivAlcohol"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="20dp" />
<!--                    android:src="@drawable/ic_wine_bottle"-->


                <TextView
                    android:id="@+id/tvAlcohol"
                    style="@style/label"
                    android:layout_below="@id/ivAlcohol"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="5dp"
                    android:text="Some Alcohol" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rlTemperature"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp">

                <com.android.volley.toolbox.NetworkImageView
                    android:id="@+id/ivTemperature"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="20dp" />
                <!--                    android:src="@drawable/ic_thermometer"-->


                <TextView
                    android:id="@+id/tvTemperature"
                    style="@style/label"
                    android:layout_below="@id/ivTemperature"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="5dp"
                    android:text="79.3 - Medium" />

            </RelativeLayout>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rlCarDetails"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >
            <TextView
                android:id="@+id/tvPlates"
                style="@style/label"
                android:text="WLU9469 "
                android:layout_centerHorizontal="true"
                android:layout_below="@id/tvModel"
                android:textSize="11dp"
                />
            <TextView
                android:id="@+id/tvModel"
                android:text="Nissan March"
                style="@style/label"
                android:layout_marginTop="55dp"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="45dp"
                android:textSize="11dp" />

        </RelativeLayout>



        <RelativeLayout
            android:id="@+id/rlLocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >

            <ImageView
                android:id="@+id/ivPinlocation"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_margin="8dp"
                android:src="@drawable/pin"
                />


            <TextView
                android:id="@+id/tvDriverLocation"
                android:text="Driver Location"
                style="@style/label"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/ivPinlocation"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rlDriving"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <com.android.volley.toolbox.NetworkImageView
                android:id="@+id/ivSteering"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_alignParentRight="true"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="8dp" />

<!--                android:src="@drawable/st_red" -->

            <TextView
                android:id="@+id/tvDriving"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@id/ivSteering"
                style="@style/label"
                android:text="Driving/not driving" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rlIcons"
            >

            <RelativeLayout
                android:id="@+id/rlLogs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_centerVertical="true"
                >

                <ImageView
                    android:id="@+id/ivLogs"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_logs"
                    />

                <TextView
                    android:id="@+id/tvLogs"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/label"
                    android:text="Log"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@id/ivLogs"
                    android:layout_marginTop="5dp"/>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rlLogscard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_log"
                android:layout_toEndOf="@+id/rlLogs"
                android:layout_margin="10dp"
                android:padding="10dp"
                android:layout_centerVertical="true"
                >

                <TextView
                    android:id="@+id/tvLog1"
                    style="@style/logs"
                    android:text="[2021-07-07 16:32] Alcohol Test: Passed"/>

                <TextView
                    android:id="@+id/tvLog2"
                    style="@style/logs"
                    android:layout_below="@id/tvLog1"
                    android:text="[2021-07-06 22:30] Alcohol Test: Failed"/>

                <TextView
                    android:id="@+id/tvLog3"
                    style="@style/logs"
                    android:layout_below="@id/tvLog2"
                    android:text="[2021-07-06 7:30] Alcohol Test: Passed"/>

            </RelativeLayout>

        </RelativeLayout>



    </RelativeLayout>

</RelativeLayout>

